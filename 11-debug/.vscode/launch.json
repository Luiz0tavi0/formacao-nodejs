{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "Debug com TSX",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "tsx",
        "--no-cache",
        "src/index.ts"
      ],
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}